{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Path mapping for workspace packages
    "baseUrl": ".",
    "paths": {
      "@cco/core": ["./packages/core/src"],
      "@cco/core/*": ["./packages/core/src/*"],
      "@cco/file-monitor": ["./packages/file-monitor/src"],
      "@cco/file-monitor/*": ["./packages/file-monitor/src/*"],
      "@cco/backend": ["./packages/backend/src"],
      "@cco/backend/*": ["./packages/backend/src/*"],
      "@cco/frontend": ["./packages/frontend/src"],
      "@cco/frontend/*": ["./packages/frontend/src/*"],
      "@cco/database": ["./packages/database/src"],
      "@cco/database/*": ["./packages/database/src/*"]
    },

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/file-monitor" },
    { "path": "./packages/backend" },
    { "path": "./packages/frontend" },
    { "path": "./packages/database" }
  ]
}
