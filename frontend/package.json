{
	"name": "claude-code-observatory-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"description": "Frontend dashboard for Claude Code Observatory",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview --host --port 4173",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "prettier --write . && eslint . --fix",
		"test": "vitest run --mode test",
		"test:watch": "vitest --mode test",
		"test:coverage": "vitest run --coverage --mode test",
		"test:e2e": "playwright test",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/kit": "^2.22.0",
		"@sveltejs/vite-plugin-svelte": "^6.1.0",
		"@tailwindcss/typography": "^0.5.16",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@testing-library/user-event": "^14.6.1",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"@vitest/coverage-v8": "^1.6.0",
		"autoprefixer": "^10.4.21",
		"daisyui": "^5.0.46",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"jsdom": "^23.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.17",
		"typescript": "^5.0.0",
		"vite": "^7.0.4",
		"vitest": "^1.6.0"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.51.0",
		"chart.js": "^4.5.0",
		"chartjs-adapter-date-fns": "^3.0.0",
		"date-fns": "^4.1.0",
		"lucide-svelte": "^0.525.0"
	}
}
